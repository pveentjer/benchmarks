set -exo pipefail

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}") >/dev/null 2>&1 && pwd)"

class_name=${1##*.}
log_file_name=${PROCESS_FILE_NAME:-${class_name}-%p}
if [ -d /dev/shm ]; then
  gc_log_file="/dev/shm/${log_file_name}-gc.log"
  error_log_file="/dev/shm/${log_file_name}-crash.log"
else
  gc_log_file="/tmp/${log_file_name}-gc.log"
  error_log_file="/tmp/${log_file_name}-crash.log"
fi

java_options=(
  -Djava.net.preferIPv4Stack=true
  -Djava.net.preferIPv6Addresses=false
  -XX:+UnlockExperimentalVMOptions
  -XX:+TrustFinalNonStaticFields
  -XX:+UnlockDiagnosticVMOptions
  -XX:+DebugNonSafepoints
  -XX:+UseParallelGC
  -XX:ErrorFile="${error_log_file}"
  -Xms4G
  -Xmx4G
  -XX:+AlwaysPreTouch
  -XX:MaxMetaspaceSize=1G
  -XX:ReservedCodeCacheSize=1G
  -XX:+EnableDynamicAgentLoading
  "-Xlog:gc*,safepoint=info,arguments=info:file=${gc_log_file}:time"
)

add_opens=(--add-opens java.base/java.util.zip=ALL-UNNAMED --add-opens java.base/jdk.internal.misc=ALL-UNNAMED)

jvm_opts=()
if [[ -v JVM_OPTS && -n "${JVM_OPTS}" ]]
then
  IFS=' ' read -ra jvm_opts <<< "${JVM_OPTS}"; unset IFS;
fi

# Resolving place holders in the jvm_opts.
# first step is to load all the system properties.
declare -A SYS_PROPS kv name val opt
for opt in "${jvm_opts[@]}"; do
  if [[ $opt == -D*=* ]]; then
    kv="${opt#-D}"
    name="${kv%%=*}"
    val="${kv#*=}"
    echo "key=${key} value=${value}"
    SYS_PROPS[$name]="$val"
  fi
done
# second step is to replace the placeholder by their values.
for i in "${!jvm_opts[@]}"; do
  for name in "${!SYS_PROPS[@]}"; do
      original_jvm_opt="${jvm_opts[$i]}"
      echo "original_jvm_opt ${original_jvm_opt}"
      replacement_jvm_opt="${original_jvm_opt//\[$name\]/${SYS_PROPS[$name]}}"
      echo "replacement_jvm_opt ${replacement_jvm_opt}"
      jvm_opts[$i]="${replacement_jvm_opt}"
  done
done

echo "Resolved jvm_opts:"
printf '  %s\n' "${jvm_opts[@]}"

exec "${JAVA_HOME}/bin/java" \
  -cp "${DIR}/../benchmarks-all/build/libs/benchmarks.jar" \
  "${java_options[@]}" \
  "${add_opens[@]}" \
  "${jvm_opts[@]}" \
  "$@"